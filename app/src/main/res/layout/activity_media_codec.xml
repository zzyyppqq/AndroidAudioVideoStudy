<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".video.MediaCodecActivity">

    <Button
        android:id="@+id/btn_media_format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="media format"/>

    <Button
        android:id="@+id/btn_media_decoder_yuv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="decoder yuv"/>


    <Button
        android:id="@+id/btn_media_encoder_sync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="encoder sync"/>

    <Button
        android:id="@+id/btn_media_encoder_async"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="encoder async"/>

</LinearLayout>